<resources>

    <declare-styleable name="PulseStyle">
        <attr name="pulse_count" format="integer" />
        <attr name="pulse_duration" format="integer" />
        <attr name="pulse_color" format="color" />
        <attr name="pulse_repeat" format="enum|integer">
            <enum name="INFINITE" value="-1" />
            <enum name="NEVER" value="0" />
        </attr>
        <attr name="pulse_maxScale" format="float" />
        <attr name="pulse_startFromScratch" format="boolean" />
        <attr name="pulse_interpolator" format="enum">
            <enum name="Linear" value="0" />
            <enum name="Accelerate" value="1" />
            <enum name="Decelerate" value="2" />
            <enum name="AccelerateDecelerate" value="3" />
        </attr>
        <attr name="text_length" format="integer"/>
    </declare-styleable>

</resources>